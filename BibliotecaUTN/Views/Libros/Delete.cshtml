@model BibliotecaUTN.Models.Libro

@{
    ViewData["Title"] = "Eliminar";
}

<h2>Eliminar</h2>

<h3>¿Estas seguro de eliminar este registro?</h3>
<div>
    <h4>Libro</h4>
    <hr />

    <dl class="row">
        <dt>
            <img src="@Model.Portada" style="max-width:400px; height : auto" />
        </dt>
    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FK_EditorialLibro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FK_EditorialLibro.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FK_GeneroLibro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FK_GeneroLibro.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FK_PaisLibro)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FK_PaisLibro.Nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Año)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Año)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Imagen)
        </dd>
    </dl>
    <h2>Autores</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AutoresLibros)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FK_Autor.Nombre)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdLibro" />
        <input type="submit" value="Eliminar" class="btn btn-default" /> |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
